{% for user in users %}

  <div class="row content-img">
        <div class="col-xs-offset-1 col-md-offset-1 col-md-3">
          <div class="panel panel-default">
            <div class="panel-heading">
              <blockquote class="blockquote-reverse">
                <h5 class="caratteristiche-titolo">{{user.nome}} {{user.cognome}}</h5>
                  <h6 class="caratteristiche-titolo">{{user.ruolo}}</h6>
                  <br>
              </blockquote>
            </div>
            <div class="panel-body"></div>
          </div>
        </div>
        <a href="{{ url('front_user', {id: user.id} )}}"><img src="{{user.immagineUrl}}" class="img-circle"></a>

    {% if is_granted("ROLE_ADMIN") %}

        <div class="col-md-5">
          <div class="panel panel-default">
            <div class="panel-heading ">
              <blockquote><h5 class="caratteristiche-titolo">Contatti:</h5>
                <h6 class="caratteristiche-titolo">{{user.email}}</h6>
                <h6 class="text-style">+39{{user.telefono}}</h6>
              </blockquote>
            </div>
            <div class="panel-body col-xs-offset-5">
              <a class="btn btn-info" href="#">
                  <i class="fa-li fa fa-facebook-official"></i>
                  <h5 class="caratteristiche-titolo-info">Facebook</h5>
              </a>
              <a class="btn btn-info" href="#">
                  <i class="fa-li fa fa-linkedin-square"></i>
                  <h5 class="caratteristiche-titolo-info">Linkedin</h5>
              </a>
            </div>
          </div>
        </div>
          <div class="col-md-2">
          <div class="panel panel-default">
            <div class="panel-heading "><blockquote> <span class="glyphicon glyphicon-time" title="Ore prenotate"><h5 class="caratteristiche-titolo stat">H: 30 </h5></span>
              <hr class="margin-top-bottom">
              <span class="glyphicon glyphicon-list-alt" title="Eventi creati"><h5 class="caratteristiche-titolo stat">N°: 15</h5></span></blockquote>
            </div>
            <div class="panel-body col-xs-offset-5">
            </div>
          </div>
        </div>
       </div>


    {% else %}



        <div class="col-md-7">
          <div class="panel panel-default">
            <div class="panel-heading ">
              <blockquote><h5 class="caratteristiche-titolo">Contatti</h5>
                <h6 class="caratteristiche-titolo">{{user.email}}</h6>
                <h6 class="text-style">+39{{user.telefono}}</h6>
              </blockquote>
            </div>
            <div class="panel-body col-xs-offset-5">
              <a class="btn btn-info" href="#">
                  <i class="fa-li fa fa-facebook-official"></i>
                  <h5 class="caratteristiche-titolo-info">Facebook</h5>
              </a>
              <a class="btn btn-info" href="#">
                  <i class="fa-li fa fa-linkedin-square"></i>
                  <h5 class="caratteristiche-titolo-info">Linkedin</h5>
              </a>
            </div>
          </div>
        </div>
       </div>
    {% endif %}
